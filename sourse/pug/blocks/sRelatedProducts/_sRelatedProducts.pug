						+relatedItem('3','89 €','189 €','Grunge John Orchestra','Man`s bomber Grunge John Orchestra Toxic Olive', 'small-related-item')
						//-
						+relatedItem('1','89 €','189 €','Asics','Man`s running shoes ASICS GEL-Nimbus 22 White/Electric Blue', 'big-related-item')
						+relatedItem('2','89 €','189 €','Grunge John Orchestra','Man`s bomber Grunge John Orchestra Toxic Olive', 'small-related-item')
						+relatedItem('3','89 €','189 €','Grunge John Orchestra','Man`s bomber Grunge John Orchestra Toxic Olive', 'small-related-item')
			+e.see-more-btn.d-sm-none see more
			+e.section-title Viewed items
			+e.slider.viwed-sl
				.prev-related-js.d-none.d-xl-flex
					+icon('chevron-left')
				.next-related-js.d-none.d-xl-flex
					+icon('chevron-right')
				.swiper-container.related-slider-js
					.swiper-wrapper
						+relatedItem('4','89 €','189 €','Garmont','Man`s running shoes ASICS GEL-Nimbus 22 White/Electric Blue', 'small-related-item')
						+relatedItem('5','89 €','189 €','The North Face','Man`s bomber Grunge John Orchestra Toxic Olive', 'small-related-item')
