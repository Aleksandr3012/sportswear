	// end sRelatedProducts

mixin relatedItem(img,newPrice,oldPrice,category,text, slideSize)
	.swiper-slide
		+e.slide-content(class=slideSize)
			+b.catalogItemRelated&attributes(attributes)
				.row.justify-content-between
					.col-auto
						+e.hit hit
					.col-auto
						+controls()
				+e.imgWrap(href="#")
					img.swiper-lazy(src="" data-src=`img/@2x/related-${img}.jpg`, alt="")
				+e.lower-content
					+e.sale -20%
					+e.newPrice=newPrice
					+e.oldPrice=oldPrice
					+e.category(href="#")= category
					+e.names(href="#")= text