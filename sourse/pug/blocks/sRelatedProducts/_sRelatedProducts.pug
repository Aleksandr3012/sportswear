mixin sRelatedProducts()
	// start sRelatedProducts
	+b.sRelatedProducts#sRelatedProducts&attributes(attributes)
		+e.section-bg-cont
			+e.section-bg
				img.lazy.d-block.d-xl-none(src="#" data-src="img/@2x/related-products-bg-2.jpg" alt="")
				img.lazy.d-none.d-xl-block(src="#" data-src="img/@2x/related-products-bg.jpg" alt="")
		.container
			+e.section-title Related products
			+e.slider.related-sl
				.prev-related-js.d-none.d-xl-flex
					+icon('chevron-left')
				.next-related-js.d-none.d-xl-flex
					+icon('chevron-right')
				.swiper-container.related-slider-js
					.swiper-wrapper
						+relatedItem('1','89 €','189 €','Asics','Man`s running shoes ASICS GEL-Nimbus 22 White/Electric Blue', 'big-related-item')
