mixin catalogItem(img,newPrice,oldPrice,category,text,wide)
	+b.catalogItem&attributes(attributes)
		.row.justify-content-between
			.col-auto
				+e.hit hit
			.col-auto
				+controls()
		+e.imgWrap(href="#")
			img.res-i.lazy(src="" data-src=`img/@2x/catalog-${img}.jpg`, alt="")
		+e.sale -20%
		+e.price
			+e.newPrice= newPrice
			+e.oldPrice= oldPrice
		+e.category(href="#")= category
		+e.names(href="#")= text
		+e.hiddenBlock
			+e.size Size: 45
			+e.radioWrap
				+custom-radio('44','size')
				+custom-radio('44','size')
				+custom-radio('45','size')
				+custom-radio('45','size')(class='custom-radio--incative')
			if wide
				.row
					.col-auto
						+e.get.btn.btn-outline-info(href="#") Get it now!
					.col
						+e.lastItem 
							+e.triangle !
							| Last item in stock
						+e.options Product available with different options
			else
				+e.get.btn.btn-outline-info(href="#") Get it now!
				+e.lastItem 
					+e.triangle !
					| !Last item in stock
				+e.options Product available with different options

