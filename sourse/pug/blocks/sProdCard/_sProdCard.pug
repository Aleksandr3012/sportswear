	+b.SECTION.sProdCard.section#sProdCard&attributes(attributes)
		.container
			block
			+e.row.row
				+e.slider-col.col-lg-8
					+b.prod-card-slider
						.swiper-container.prod-card-slider-js
							.swiper-wrapper
								+prodCardSlide(1)
								+prodCardSlide(2)
								+prodCardSlide(3)
								+prodCardSlide(4)
								+prodCardSlide(5)
						+e.thumb
							.swiper-container.prod-card-thumb-js
								.swiper-wrapper
									+prodCardThumb(1)
									+prodCardThumb(2)
									+prodCardThumb(3)
									+prodCardThumb(4)
									+prodCardThumb(5)
					+e.tabs-cont.tabs
