mixin otherItem(imgNum, hasDiscount=false)
	+e.A.other-item(href='#')
		+e.other-item-content
			img.lazy(src='#' data-src=`img/@2x/02-other-item-${imgNum}.jpg` alt='')
			if hasDiscount
				.discount - 20%

mixin prodCardSlide(imgNum)
	.swiper-slide
		+e.A.slide-link(href=`img/@2x/02-slider-${imgNum}.jpg` data-fancybox="prodCardGroup")
			+e.img-cont
				img.swiper-lazy(src="#" data-src=`img/@2x/02-slider-${imgNum}.jpg` alt="")

mixin prodCardThumb(imgNum)
