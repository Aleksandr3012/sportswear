mixin chechoutContent4()
	+b.checkout-payment
		+e.radio-items
			+checkoutPaymentRadio('Pay by Check')(checked)
				p Please send us your check including the following details:
				+e.data
					+e.data-pill
						+e.data-pill-key Amount
						+e.data-pill-val
							.txt .79 €
							.tax Tax included
					+e.data-pill
						+e.data-pill-key Payee
						+e.data-pill-val
							.txt Payee
					+e.data-pill
						+e.data-pill-key Send your check to this address
						+e.data-pill-val
							.txt Send your check to this address
			+checkoutPaymentRadio('Pay by bank wire')
				p Please transfer the invoice amount to&nbsp;our bank account. You will receive our order confirmation by&nbsp;email containing bank details and order number. Goods will be&nbsp;reserved 7&nbsp;days for you and we&rsquo;ll process the order immediately after receiving the payment.
		+b.LABEL.checkbox-item
			input(type="checkbox" name="terms" value="terms" checked)
			span
				.txt
					| I agree to the
					|
					a(href="#") terms of service
					|
					| and will adhere to them unconditionally.
		+e.A.btn(href="#") continue

mixin checkoutPaymentRadio(headlineTxt='headlineTxt')
