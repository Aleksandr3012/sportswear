mixin sCheckoutP()
	// start sCheckoutP
	+b.sCheckoutP.section#sCheckoutP&attributes(attributes)
		.container
			+b.section-title
				h2 Checkout
			+e.row.row
				.col-xl-9
					block
					//
				.col-xl-3
					+dataTable(false)
						+e.item.items-list.dd-item.data-table-dd-item-js
							span Items
							span
								.num 3
								+icon('chevron-down')
						+e.products-dr-down.products-dr-down-js
							+dataTableDdItem(1)
							+dataTableDdItem(2)
					+b.policy-links.d-none.d-xl-block
						+e.A.link(href="#")
							+e.icon.car
								+icon('delivery-car')
							span Delivery policy
						+e.A.link(href="#")
							+e.icon.arrows
								+icon('return-arrows')
							span Return policy
					//-cart-data-bg
	// end sCheckoutP
mixin dataTableDdItem(imgNum)
	+e.dd-item
		+e.dd-top
			+e.dd-img
				img(src=`img/@2x/shop-cart-${imgNum}.png` alt="")
			+e.dd-descr
				+e.short-name Grunge John Orchestra
				+e.A.long-name(href='#') Man`s bomber Grunge John Orchestra Toxic Olive
				+e.artice Article 1011A780100
		+e.dd-bot
			+e.dd-amout ×3
			+e.dd-price 189 €

