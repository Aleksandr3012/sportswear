mixin sAccountAddressContent()
	+b.account-address
		+e.row.row
			+accoundAddressItem('Address #1')
			+accoundAddressItem('Address #2')
			.col-lg-6
				+e.A.item(href='#' class="create-item")
					span.link-txt + Create new address

mixin accoundAddressItem(itemNum='1')
	.col-lg-6
		+e.item
			+e.header
				+e.number=itemNum
				+e.controll-btns
					+e.A.btn(href="#")
						+icon('edit-icon')
					+e.A.btn(href="#")
						+icon('vaste')
			+e.data
				+e.data-item
					span First name
					span Nicolay
				+e.data-item
					span Last name
					span Neretin
				+e.data-item
					span Address
					span Paustovskogo, 4
				+e.data-item
					span Zip/Postal Code
					span 117463
				+e.data-item
					span City
					span Moscow
				+e.data-item
					span Country
					span Russia
	//-end address
	//-end address

