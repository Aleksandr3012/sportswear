mixin productSelect(selectName, optionsArr=['1', '2', '3'], placeholder='', keyClass='custom-select2-margined')
	select(name=selectName data-placeholder=placeholder class=keyClass)
		option(value="" label='#')
		- for (let item of optionsArr)
			option(value=item)=`prod ${item}`

mixin oHDetShippItem(itemMod='',headTxt='headTxt', valTxt='valTxt', valClasses='')
