mixin orderItemsPill(imgNum=1, lastItem=false, quantityTxt='2', totalPrice='89 €')
	+e.oi-pill
		+e.oi-pill-item.product
			+e.oi-pill-header Product
			+e.oi-pill-content
				+b.img-and-descr-frame
					+e.A.item-img(href='#')
						img.lazy(src="" data-src=`img/@2x/shop-cart-${imgNum}.png` alt="")
					+e.item-desr
						+e.short-name Grunge John Orchestra
						+e.A.long-name(href='#') Man`s bomber Grunge John Orchestra Toxic Olive
						+e.artice Article 1011A780100
