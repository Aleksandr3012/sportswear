mixin sAccountInfo()
	// start sAccount
	+b.SECTION.sAccount.section#sAccount&attributes(attributes)
		.container
			block
			+sAccountTopLine()
			+e.row.row
				.col-md-3.col-xl-2
					+e.aside-menu
						ul
							li: a.current(href="#") Information
							li: a(href="#") Adresses
							li: a(href="#")
								| Order history
								br.d-none.d-lg-block
								| and details
							li: a(href="#") Credit clips
							li: a(href="#") Vouchers
							li: a(href="#") Merchandise
							li: a(href="#") GPRD — personal data
				.col-md-9
					+sAccountInfoContent()
	// end sAccount

mixin sAccountTopLine(headlineTxt='Your personal information')
	+b.top-line
		h2=headlineTxt
		+e.A.delete-all(href='#')
			+icon('log-out')
			span.d-none.d-sm-block Log out

	//info
mixin sAccountInfoContent()
	+b.account-info
		+form-wrap()
			+e.top-items
				+accountInfoItem('Social title', 'radio-content')
					+radioBtn('Mr.', 'sex')(checked)
					+radioBtn('Mrs.', 'sex')
				+accountInfoItem('First name')
					+input('', 'text', undefined, 'name')
				+accountInfoItem('Last name')
					+input('', 'text', undefined, 'surname')
				+accountInfoItem('Email')
					+input('', 'email', undefined)
				+accountInfoItem('Password')
					+e.input-wrap
						+e.INPUT.input.form-control(type='password' name='password' value='pass1234')
						+e.show-hide-btn.toggle-pass-inp-js
							+icon('pass-eye')
							+icon('pass-eye-closed')
				+accountInfoItem('New password')
					+e.input-wrap
						+e.INPUT.input.form-control(type='password' name='new-password' value='')
						+e.show-hide-btn.toggle-pass-inp-js
							+icon('pass-eye')
							+icon('pass-eye-closed')
				+accountInfoItem('Birthday', '', 'has-description-txt')
					+input('', 'text', undefined, 'bithday')
						+e.optional-txt Optional
						+e.description-txt (E.g.: 05/31/1970)
			+e.lower-items
				+e.checkbox-items
					+accountInfoLowerItem('Receive offers from our partners')
					+accountInfoLowerItem('Sign up for our newsletter', 'has-descr')
						p You may unsubscribe at any moment. For that purpose, please find our contact info in the legal notice.
					+accountInfoLowerItem('I agree to the terms and conditions and the privacy policy')
				+e.BUTTON.send-btn send

mixin accountInfoItem(txt='Social title', contentClasses='', itemClasses='')
	+e.item(class=itemClasses)
		+e.title=txt
		+e.content(class=contentClasses)
			block

mixin radioBtn(Txt, name)
	+b.LABEL.radio-frame
		input(type="radio" name=name value=Txt)&attributes(attributes)
		span=Txt


mixin accountInfoLowerItem(Txt, itemClasses='')
	+b.LABEL.checkbox-item(class=itemClasses)
		input(type="checkbox" name=name value=Txt)&attributes(attributes)
		span=Txt
		block
	//-end info
	//-end info

