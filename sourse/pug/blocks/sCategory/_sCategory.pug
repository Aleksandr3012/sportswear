mixin categoryItem(long,mixed,title,img,...items)
	+b.categoryItem&attributes(attributes)
		if long
			.row
				.col
					+e.title.h1(href="#")= title
				.col-auto
					+e.DIV.subcategories
						ul
						each item in items
							li: a(href="#")= item
						+e.more(href="#") MORE
				.col-auto
					img.res-i.lazy(src="#" data-src=`img/@2x/category-${img}.jpg`, alt="")
		else if mixed
			.row
				+e.col.col
					+e.title.h1(href="#")= title
					+e.DIV.subcategories
						ul
						each item in items
							li: a(href="#")= item
						+e.more(href="#") MORE
				.col
					img.res-i.lazy(src="#" data-src=`img/@2x/category-${img}.jpg`, alt="")
		else
			+e.title.h1(href="#")= title
				if items
					+e.DIV.subcategories
						ul
						each item in items
							li: a(href="#")= item
						+e.more(href="#") MORE
			img.res-i.lazy(src="#" data-src=`img/@2x/category-${img}.jpg`, alt="")


