mixin blogItem(lg,img,title,text)
	+b.blogItem&attributes(attributes)
		if lg
			.row
				.col-sm-6
					+e.imgWrap
						img.lazy.res-i(src="#" data-src=`img/@2x/blogItem-${img}.jpg` alt="")
				.col-sm-6
					+e.textBlock
						+e.catagory(href="#") wear
						+e.date 18.05.20
						+e.title.h6= title
						if text
							+e.descr= text
						+tools()
		else
			+e.textBlock
				if img
					+e.imgBg.picture-bg
						img.lazy.res-i(src="#" data-src=`img/@2x/blogItem-${img}.jpg` alt="")
				+e.catagory(href="#") wear
				+e.date 18.05.20
				+e.title.h6= title
				+e.descr= text
				+tools()


mixin sBlog()
	// start sBlog
	+b.SECTION.sBlog.section#sBlog&attributes(attributes)
		+e.imgWrap.picture-bg
			img.lazy(data-src="img/@2x/blog-bg.jpg", alt="")
		.container
			+b.section-title
				h2 Blog
			.row
				.col-xl-6
					+blogItem('lg','1','Mountaineering video tutorial','"Video mountaineering tutorial" in Russian from the Sport-Marathon team and Vladimir Molodozhen. A clear demonstration of the basic techniques of mountaineering ...')(class="bg-gray")
